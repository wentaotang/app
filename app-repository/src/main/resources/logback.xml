	<logger name="platform-error" level="error">
		<appender-ref ref="ERROR" />
	</logger>
	<logger name="platform-access" level="info">
		<appender-ref ref="ACCESS" />
	</logger>

	<root level="WARN">
		<appender-ref ref="console" />
		<appender-ref ref="ERROR" />
		<appender-ref ref="ACCESS" />
	</root>
	
