    </bean>

    <bean name="springSessionRepositoryFilter" class="org.springframework.session.web.http.SessionRepositoryFilter">
        <constructor-arg name="sessionRepository" ref="springSessionRepositoryFilter"/>
    </bean>
-->
</beans>